{
  "name": "fs-search",
  "version": "1.0.0",
  "description": "Modern full-stack search application built with Typesense, Node.js, and React",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "api": "ts-node src/api/server.ts",
    "frontend": "cd frontend && npm run dev",
    "fullstack": "concurrently \"npm run api\" \"npm run frontend\"",
    "install:frontend": "cd frontend && npm install",
    "setup": "npm install && npm run install:frontend && npm run build",
    "seed": "ts-node src/data.ts",
    "seed:claims": "ts-node src/data.ts --collection=claims",
    "seed:locations": "ts-node src/data.ts --collection=locations",
    "seed:software": "ts-node src/data.ts --collection=software_stack",
    "validate-data": "ts-node src/utils/validate-seed-data.ts",
    "demo": "ts-node src/index.ts",
    "sync:start": "ts-node -e \"import('./src/services/sync').then(m => m.startGlobalSync())\"",
    "sync:stop": "ts-node -e \"import('./src/services/sync').then(m => m.stopGlobalSync())\"",
    "sync:status": "ts-node -e \"import('./src/services/sync').then(m => m.getSyncStatus().then(console.log))\"",
    "docker:build": "docker build -t fs-search .",
    "docker:run": "docker-compose up -d",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "colima:setup": "./scripts/colima-setup.sh",
    "colima:start": "./scripts/colima-setup.sh start",
    "colima:stop": "./scripts/colima-setup.sh stop",
    "colima:test": "./scripts/colima-setup.sh test",
    "k8s:deploy": "./scripts/deploy.sh",
    "k8s:deploy-dev": "./scripts/deploy.sh --environment development --skip-seed",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "lint": "eslint src/ --ext .ts,.js",
    "lint:fix": "eslint src/ --ext .ts,.js --fix",
    "security:audit": "npm audit --audit-level=moderate",
    "security:check": "npm audit --audit-level=high",
    "bench:load": "k6 run scripts/benchmarks/load-test.js",
    "bench:index": "npm run bench:index:script",
    "bench:index:script": "ts-node scripts/benchmarks/index-performance.ts",
    "bench:all": "npm run bench:index && npm run bench:load"
  },
  "keywords": [
    "typesense",
    "search",
    "nodejs",
    "typescript",
    "react",
    "express",
    "fullstack"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-sns": "^3.450.0",
    "@aws-sdk/client-sqs": "^3.450.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "meilisearch": "^0.37.0",
    "pino": "^9.3.2",
    "pino-http": "^10.3.0",
    "typesense": "^1.8.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.7.0",
    "pino-pretty": "^13.1.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.0"
  }
}
